---
interface Props {
	title?: string;
	body?: string;
	href?: string;
    channel?: string;
    parent?: string;
    autoplay?: boolean;
    height: number;
    width: number;
}
/**
 * https://developers.google.com/youtube/player_parameters?hl=fr
 */
const { href, title, body, channel = 'monstercat', parent = 'obs.pesto.io', autoplay = true, height = 540, width = 720 } = Astro.props;
---


<iframe
    src={`https://player.twitch.tv/?${channel}&parent=${parent}`}
    height={height}
    width={width}
    allowfullscreen>
</iframe>